# ========================================
# Global Settings
# ========================================
ACCOUNT_COUNT=5
# Check interval in seconds (300 = 5 minutes)
CHECK_INTERVAL=300
# Max emails to process per account per loop
MAX_EMAILS_PER_LOOP=100

# Log Settings
LOG_LEVEL=INFO
LOG_FILE=logs/pop3_gmail_importer.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ========================================
# Account 1 Settings
# ========================================
ACCOUNT1_ENABLED=true

# POP3 Settings (source email account)
ACCOUNT1_POP3_HOST=pop.example.com
ACCOUNT1_POP3_PORT=995
ACCOUNT1_POP3_USE_SSL=true
# TLS certificate verification (recommended: true)
ACCOUNT1_POP3_VERIFY_CERT=true
ACCOUNT1_POP3_USERNAME=user@example.com
ACCOUNT1_POP3_PASSWORD=your_password_here

# Gmail API Settings (destination Gmail account)
ACCOUNT1_GMAIL_CREDENTIALS_FILE=credentials.json
ACCOUNT1_GMAIL_TOKEN_FILE=tokens/token_account1.json
ACCOUNT1_GMAIL_TARGET_EMAIL=your-gmail@gmail.com
# DEPRECATED: GMAIL_APPLY_FILTERS is not supported by Gmail API messages.import()
# The messages.import() API does not support automatic filter application
# Set to false (filters will not be applied automatically)
ACCOUNT1_GMAIL_APPLY_FILTERS=false
# Custom label to apply to imported emails (in addition to INBOX and UNREAD)
# Example: ACCOUNT1_GMAIL_CUSTOM_LABEL=ImportedFromPOP3
ACCOUNT1_GMAIL_CUSTOM_LABEL=

# Debug Settings
ACCOUNT1_DEBUG_LIMIT_EMAILS=false     # Limit to 5 most recent emails for testing (true=debug, false=process all)

# Deletion Settings
ACCOUNT1_DELETE_AFTER_FORWARD=false   # Delete from POP3 server after successful import (false=keep, true=delete)

# Backup Settings
ACCOUNT1_BACKUP_ENABLED=true
ACCOUNT1_BACKUP_DIR=backup/account1
ACCOUNT1_BACKUP_RETENTION_DAYS=90

